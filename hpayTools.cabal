  main-is:         ServerMain.hs
  hs-source-dirs:  src
  build-depends:   base,
                    extra,
                    bytestring,
                    binary,
                    text,
                    transformers,
                    containers,
                    parsec,
                    stm,
                    stm-containers,
                    list-t,
                    hslogger,
                    io-streams,
                    binary-streams,
                    shelly,
                    network,
                    network-simple,
